<div style="display: flex; align-items: baseline">
  <p style="font-size: 10px; margin-top: 6px">
    Votes: <%= post.votes.reduce( (cur, { value }) => cur + value, 0 );%>
  </p>

  <% if(user) { %> <% const votes = post.votes.filter( (p) => p.user_id ==
  user.id )[0]; %>
  <form action="/posts/vote/<%= post.id %>" method="post">
    <div
      style="
        display: flex;
        width: 80px;
        justify-content: space-around;
        align-content: center;
      "
    >
      <input
        class="btn-secondary"
        style="
              font-size: 10px;
              padding: 0px;
              height: 15px;
              width: 30px;
              background-color: gray;
              <% if(votes && votes.value == 1) { %>
                background-color: hsl(195, 80%, 50%);
              <% } %>
              border: none;
            "
        type="submit"
        name="action"
        value="Up"
      />

      <input
        style="
              font-size: 10px;
              padding: 0px;
              height: 15px;
              width: 30px;
              border: none;
              background-color: gray;
              <% if(votes && votes.value == -1) { %>
                background-color: hsl(195, 80%, 50%);
              <% } %>
              
            "
        type="submit"
        name="action"
        value="Down"
      />
    </div>
  </form>
  <% } %>
</div>
