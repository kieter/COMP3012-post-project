<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/@picocss/pico@1/css/pico.classless.min.css"
    />
    <link href="/css/style.css" rel="stylesheet" />
    <title><%= post.title %></title>
  </head>
  <body>
    <main>
      <div class="authOptions">
        <h1><%= post.title %></h1>
        <a role="button" href="/posts">Home</a>
      </div>
      <div>
        <p><%= post.description %></p>
        <div style="line-height: 1px; margin-top: 50px">
          <p>
            Link <a href="<%= post.link %>" target="_blank"><%= post.link %></a>
          </p>
          <p>Created by: <%= post.creator.uname %></p>
          <p>
            Created At:
            <small>
              <% const commentInfo = new Date(post.timestamp); %> <%=
              commentInfo.toLocaleDateString("en-US") %></small
            >
          </p>
        </div>

        <hr />
        <div>
          <h4>Comments</h4>
          <% if(user) { %>
          <div><%- include("./helpers/createCommentForm.ejs") %></div>
          <% } %>
          <div style="padding: 10px; padding-top: 1px">
            <ul class="timeline">
              <% post.comments.forEach(function(report) { %>
              <li style="list-style-type: none">
                <div class="timeline-time">
                  <p class="date" style="text-align: left; margin-bottom: 1px">
                    <%= report.description %>
                  </p>
                  <div>
                    <small> <%= report.creator.uname %> </small>
                    <small
                      class="time"
                      style="
                        font-weight: 700;
                        line-height: 20px;
                        text-align: left;
                        font-size: 10px;
                        margin-left: 10px;
                      "
                    >
                      <% const commentInfo = new Date(report.timestamp); %> <%=
                      commentInfo.toLocaleDateString("en-US") %>
                    </small>
                  </div>
                </div>
              </li>
              <hr />
              <% }) %>
            </ul>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
